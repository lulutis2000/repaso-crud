<div class="container coasters-index">

  <a href="/coasters/new" class="btn btn-dark">Crear nueva montaña rusa</a>

  <h1 style="font-weight: 100">Índice de montañas rusas</h1>

  {{#each coaster}}
  <hr>
  <a href="/coasters/details/{{id}}" class="btn btn-sm btn-dark">Ver detalles</a>
  <h4>{{name}}</h4>
  <p>{{description}}</p>
  <small><strong>Longitud: </strong> {{lenght}}m | <strong>Inversiones: </strong> {{inversions}} | <strong>Parque: </strong> {{park}}</small>
  {{/each}}



</div>